filters:
  and:
    - file.inFolder("/")
views:
  - type: cards
    name: Album Wall
    filters:
      and:
        - file.name != "{示例}"
        - or:
            - file.inFolder("⪨ Music/Art")
            - file.inFolder("⪨ Music/Popular")
            - file.inFolder("⪨ Music/Single Songs")
            - file.inFolder("⪨ Music/Soundtrack")
        - "!Album.isEmpty()"
    order:
      - Album
      - Artist
      - Rating
    cardSize: 150
    image: note.cover
